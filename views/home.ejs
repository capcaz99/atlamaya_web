<div class="news">
	<h1 style="text-align:center">Noticias Recientes</h1>
	<div class="row">
	    <%news.sort(function(a, b){
	                    if(a.created < b.created) return 1;
	                    if(a.created > b.created) return -1;
	                    return 0;
	                    }); 
	    news.forEach(function(news){ %>
	    <div class="container separador">
		    
		        <div class="col-md-4 col-xs-12">
		        	<div class="thumbnail home">
		            	<img src="<%= news.image %>" class="img-responsive img-rounded" alt="Responsive image" id="image">
					</div>                        
		        </div>    
		        <div class="col-md-7 col-xs-12">
		            <h1><a style="color:#387F21"href="news/<%=news._id%>"><%= news.title %></a></h1>
		            <h3> <%= news.content.substring(0,100)+"[...]" %></h3>
		            <% if(user.admin){ %>
		                <div class="row">
		                    <div class="col-md-1 col-xs-12 buttrigth">
		                        <input type="button" class="btn btn-info "onclick="location.href='/news/<%=news._id%>/edit';" value="Editar" />
		                    </div>
		                    <div class="col-md-1 col-sm-12 butt">
		                        <form method="POST" action="/news/<%=news._id%>?_method=DELETE">
		                        	<button class="btn btn-danger">Eliminar</button>
		                        </form>
		                    </div>
		                </div>
		            <% } %>
		        </div>
	        	<div class="col-md-1"></div>
	        
        </div>
    	<% }); %>
    </div>
