<% include ../partials/header %>

<!-- Jumbotron -->
	<div class="container">
		<div class="jumbotron">
  			<h1>Galer&iacute;as</h1>
  			<p>Aqu&iacute; podr&aacute;s encontrar las galer&iacute;as</p>
  			<% if(user.admin){ %>
				<a href="/gallery/new" class="btn btn-success">Agregar nuevo</a>
			<% } %>  
		</div>
	</div>	


    <div class="container">
    <div class="row">
    <% gallery.forEach(function(gallery){ %>
        <div class="col-lg-4 col-sm-6">
