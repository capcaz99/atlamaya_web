<% include ../partials/header %>





<div class="container">
	<div class="jumbotron"> 
		<h1>Seguridad</h1>
		<h3>Aqu&iacute; podr&aacute;s encontrar los datos de los polic&iacute;as del condominio</h3>
		<% if(user.admin){ %>
		<div class="row">
		    <a href="/security/new" class="btn btn-success">Agregar nuevo</a>
		</div>
        <% } %>
	</div>
</div>

<div class="container">
	<div class="row">
        <% security.forEach(function(security){ %>
            <div class="col-md-6 col-sm-12">
        	    <div class="thumbnail">
        		    <div class="row">
        			    <div class="col-xs-4">
        			        <img src="<%= security.image %>" class="img-responsive img-rounded" alt="Responsive image" id="image">
                        </div>
        				<div class="col-xs-8">
        				    <h1><%= security.name %></h1>
        				    <h3> <%= security.job %></h3>
        				    <% if(user.admin){ %>
        				    <div class="row">
        				        <div class="col-md-2 col-sm-12 buttrigth">
            				        <input type="button" class="btn btn-info"onclick="location.href='/security/<%=security._id%>/edit';" value="Editar" />
            				    </div>
            				    <div class="col-md-2 col-sm-12 butt">
            				        <form method="POST" action="/security/<%=security._id%>?_method=DELETE">
            				            <button class="btn btn-danger">Eliminar</button>
            				        </form>
            				    </div>    
            				    
        				    </div>
        				    <% } %>
        				    
        				</div>
        			</div>	
        		</div>
        	</div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>
