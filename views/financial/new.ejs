
<% include ../partials/header %>

    <div class="container">
			<div class="row">	
				<div class="col-sm-2"></div>
				<div class="col-sm-8">
					<div class="jumbotron">
					  <div class="inside">
					  	<h2 class="h1F">Agregar un nuevo estado financiero</h2>
                            <form method="POST" action="/financial" enctype="multipart/form-data">					       
                            <div class="form-group">
					            <label>Título</label>
					            <input type="text" class="form-control" placeholder="Nombre" name="financial[title]">   
					        </div>
					        <div class="form-group">
					            <label>Descripción</label>
					            <input type="text" class="form-control" placeholder="Descripción" name="financial[description]">
					        </div>
					        <div class="form-group">
					            <label>Documento</label>
					            <input type="file" class="form-control" placeholder="Documento" name="file" required>
					        </div>
					        
                            <button class="btn btn-primary">Aceptar</button>
                        </form>
					  </div>
					</div>	
				</div>	
				<div class="col-sm-2"></div>
			</div>
	</div>
	
