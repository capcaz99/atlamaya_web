<% include ../partials/header %>


<div class="container">
		<div class="jumbotron">
  			<h1>Reglamentos</h1>
  			<p>Aqu&iacute; podr&aacute;s encontrar algunos reglamentos de la CDMX</p>
  			<% if(user.admin){ %>
				<a href="/regulation/new" class="btn btn-success">Agregar nuevo</a>
			<% } %>  
		</div>
	</div>	



<!-- Estados de cuenta -->
<div class="container">
	<div class="row">
	  <% regulation.sort(function(a, b){
                    if(a.title < b.title) return -1;
                    if(a.title > b.title) return 1;
                    return 0;
                    }); 
	  
	  
	  	regulation.forEach(function(regulation){ %>
    	   <div class="col-md-4 col-sm-12 butt separador">
    	  	<div class="thumbnail">
    	        <div class="caption">
    	            <h3><%= regulation.title %></h3>
    	            <p><%= regulation.content %></p>
    	           <p><a href="<%= regulation.document %>" class="btn btn-primary" role="button">Ver</a> </p>
    	           <% if(user.admin){ %>
        				    <div class="row">
        				        <div class="col-md-3 col-sm-12 butt">
            				        <input type="button" class="btn btn-info"onclick="location.href='/regulation/<%=regulation._id%>/edit';" value="Editar" />
            				    </div>
            				    <div class="col-md-2 col-sm-12 butt">
            				        <form method="POST" action="/regulation/<%=regulation._id%>?_method=DELETE">
            				            <button class="btn btn-danger">Eliminar</button>
            				        </form>
            				    </div>
            				</div>
        		  <% } %>
    	        </div>
    	     </div>
    	   </div>
	   <% }); %> 
	  
	</div>
</div>

<% include ../partials/footer %>
